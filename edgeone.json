{
  "name": "smart-wishes",
  "installCommand": "npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "node-functions": {
    "external_node_modules": [
      "express",
      "cors",
      "dotenv",
      "openai"
    ]
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/assets/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    },
    {
      "source": "/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],
  "caches": [
    {
      "source": "/assets/*",
      "cacheTtl": 86400
    }
  ]
}